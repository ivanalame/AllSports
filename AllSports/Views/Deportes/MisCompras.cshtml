@model List<Compra>

<h1>Compras del Usuario</h1>



@if (Model != null && Model.Count > 0)
{
    <div class="row">
        @foreach (var compra in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Albaran: @compra.Albaran</h5>
                        <p class="card-text">Fecha de Compra: @compra.FechaCompra</p>
                        <p class="card-text">Cantidad: @compra.Cantidad</p>
                        @if(compra.Descuento!="DESCUENTAZO"){
                            <p class="card-text">Descuento Usado: Ninguno</p>
                        }
                        else
                        {
                            <p class="card-text">Descuento Usado: @compra.Descuento</p>
                        }
                        <a class="btn btn-success" asp-action="_DetalleMisCompras" asp-controller="deportes" asp-route-idproducto="@compra.IdProducto">Detalle</a>
                      

                    </div>
                </div>
            </div>
        }
        <div id="contenidodetalle"></div>
    </div>
}
else
{
    <p>No hay compras realizadas por este usuario.</p>
}
