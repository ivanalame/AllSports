@using System.Security.Claims

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Perfil de @Context.User.Identity.Name</h2>
                    <div class="row">
                        <div class="col-md-6">
                            <h4>Información Personal</h4>
                            <hr>
                            <p><strong>Nombre:</strong> @Context.User.FindFirst("Nombre")?.Value</p>
                            <p><strong>Apellidos:</strong> @Context.User.FindFirst("Apellidos")?.Value</p>
                            <p><strong>Email:</strong> @Context.User.FindFirst(ClaimTypes.Name)?.Value</p>
                        </div>
                        <div class="col-md-6">
                            <h4>Detalles de la Cuenta</h4>
                            <hr>
                            <p><strong>Tipo de Usuario:</strong> @Context.User.FindFirst(ClaimTypes.Role)?.Value</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
