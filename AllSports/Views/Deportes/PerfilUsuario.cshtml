@using System.Security.Claims
<style>
    .bg-light-blue {
        background-color: #0d9cc4;
        border: 1px solid #0d9cc4;
    }
</style>
<div class="container mt-5">
    <div class="row justify-content-center bg-light-blue">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="card-title mb-4">Perfil de @Context.User.Identity.Name</h2> 
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <h4>Información Personal</h4>
                            <hr>
                            <p><strong>Nombre:</strong> @Context.User.FindFirst("Nombre")?.Value</p>
                            <p><strong>Apellidos:</strong> @Context.User.FindFirst("Apellidos")?.Value</p>
                            <p><strong>Nif:</strong> @Context.User.FindFirst("Nif")?.Value</p>
                            <p><strong>Email:</strong> @Context.User.FindFirst(ClaimTypes.Name)?.Value</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
