@model List<Valoracion>
@{
    Producto producto = ViewData["Producto"] as Producto;
}

<h1>Detalles Del Producto</h1>

@if (producto != null)
{
    <div class="row">
        <div class="col-md-4">
            <img src="~/Images/@producto.Imagen" class="w-100" />
        </div>
        <div class="col-md-8">
            <h2>Información del Producto</h2>
            <p><strong>Nombre:</strong> @producto.Nombre</p>
            <p><strong>Precio:</strong> @producto.Precio€</p>
            <p><strong>Marca:</strong> @producto.Marca</p>
            <p><strong>Descripción:</strong> @producto.Descripcion</p>

            <p><strong>Descripción Larga:</strong> @producto.Descripcion_Larga</p>
            <!-- Agrega más campos de Producto según sea necesario -->
        </div>
    </div>

    <a asp-route-IdProducto="@producto.IdProducto">
        <div class="text-center mt-2">
            <!-- Añadí clases para centrar el botón y darle margen superior -->
            <button class="btn btn-success">Añadir a la cesta</button>

            <button class="btn btn-success">Comprar</button>
        </div>
    </a>
}

@if (Model != null && Model.Count > 0)
{
    <div class="row mt-4">
        <div class="col-md-12">
            <h2>Valoraciones</h2>
            <ul>
                @foreach (var valoracion in Model)
                {
                    <li>
                        <p><strong>Usuario:</strong> @valoracion.IdUsuario</p>
                        <p><strong>Valoración:</strong> @valoracion.Puntuacion</p>
                        <p><strong>Comentario:</strong> @valoracion.Comentario</p>
                        <!-- Agrega más campos de Valoración según sea necesario -->
                    </li>
                }
            </ul>
        </div>
    </div>
}
else
{
    <p>No hay valoraciones para este producto.</p>
}
